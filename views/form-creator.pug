mixin formCreator(fieldName, labelText, fieldValue, fieldType = 'text', placeholder = null)
  div(class='form-inputs')
    label(for=fieldName, class='form-label')= labelText
    input(type=fieldType id=fieldName name=fieldName value=fieldValue placeholder=placeholder class='form-data')

mixin validationErrorSummary(errors)
  if errors
    div(class='alert alert-danger' role='alert')
      p(class='alert-p') The following error(s) occurred:
      ul(class='alert-u')
        each error in errors
          li(class='alert-li')= error
