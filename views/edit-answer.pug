extends layout
include form-creator
append head
  link(rel='stylesheet' href='/stylesheets/form-styles.css')
  link(rel='stylesheet' href='/stylesheets/navbar.css')
block content
  div(class='answerpg-wrapper')
    include navbar
    +validationErrorSummary(errors)
    div(class='form-wrapper')
      div(class='header')
        h1 Update your answer
        form(method='post' action=`/CocktailQs/${cocktailA.cocktailQId}/CocktailAs/${cocktailA.id}` class='form')
          input(type='hidden' name='_csrf' value=csrfToken)
          div(class='inner-form-wrapper')
            div(class='label-div')
              label(for="answer" class='labels') Cocktail-A Body:
            div(class='textarea-div')
              textarea(name="answer", cols=92, rows=15)=cocktailA.answer
          div(class='form-btn')
            button(class="btn" type="submit") Update
