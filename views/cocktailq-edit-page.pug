extends layout
include form-creator
append head
  link(rel='stylesheet' href='/stylesheets/form-styles.css')
  link(rel='stylesheet' href='/stylesheets/navbar.css')
block content
  div(class='answerpg-wrapper')
    include navbar
    +validationErrorSummary(errors)
    div(class='form-wrapper')
      div(class='header')
        h1 Update your Cocktail-Q
        form(action=`/CocktailQs/${cocktailq.id}/edit` method='post' class='form')
          input(type='hidden' name='_csrf' value=csrfToken)
          div(class='inner-form-wrapper')
            div(class='label-div')
              label(for='question' class='labels') Cocktail-Q Body:
            div(class='textarea-div')
              textarea(name='question')=cocktailq.question
          div(class='form-btn')
            button(type='submit' class='btn') Update
